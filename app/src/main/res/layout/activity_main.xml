<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.menu.MainActivity">


    <ImageView
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/main_img_logo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="64dp"/>
    <Button
            android:text="Jogar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_btn_play"
            app:layout_constraintStart_toStartOf="@+id/main_img_logo"
            app:layout_constraintEnd_toEndOf="@+id/main_img_logo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/main_img_logo"/>
    <Button
            android:text="Ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_btn_ranking"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_play"
            app:layout_constraintStart_toStartOf="@+id/main_img_logo"
            app:layout_constraintEnd_toEndOf="@+id/main_img_logo"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Sobre"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_btn_about"
            app:layout_constraintStart_toStartOf="@+id/main_img_logo"
            app:layout_constraintEnd_toEndOf="@+id/main_img_logo"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Sair"
            app:layout_constraintTop_toBottomOf="@+id/main_btn_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_btn_exit"
            app:layout_constraintStart_toStartOf="@+id/main_img_logo"
            app:layout_constraintEnd_toEndOf="@+id/main_img_logo"
            android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>